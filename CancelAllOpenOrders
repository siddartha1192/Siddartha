function Cancel-AllOpenOrdes($token)

{

    

    $OrderStatus = Post-FyersAPI -method 'GET' -uri 'https://api.fyers.in/api/v2/orders' -token $token

    $pending_Orders = $OrderStatus.orderBook | where {$_.status -eq 6}

    if($pending_Orders)

    {

        $pending_Orders| %{

        $OrderID = $_.id



        $json = $host | select @{n='id';e={$OrderID}} | ConvertTo-Json

        

        $OrderStatus = Post-FyersAPI -method 'Delete' -uri 'https://api.fyers.in/api/v2/orders' -token $token -body $json

        $OrderStatus.message

        }

    }

}

